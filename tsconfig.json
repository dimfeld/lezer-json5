{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["es2020"],
    "target": "es2021",
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
